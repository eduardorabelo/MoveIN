<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shoaib.movein.IndoorMap"
    android:background="#ffffff">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"    android:textColor="#ffffff"
        android:text="Floor 3"
        android:id="@+id/floor1"
        android:background="#6c9293"
        android:layout_below="@+id/floor2"
        android:layout_alignLeft="@+id/floor2"
        android:layout_alignStart="@+id/floor2"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"  android:text="Floor 2"
        android:textColor="#ffffff"
        android:id="@+id/floor2"
        android:layout_below="@+id/floor3"
        android:layout_alignLeft="@+id/floor3"
        android:layout_alignStart="@+id/floor3"
        android:layout_marginTop="35dp"
        android:background="#6c9293" />

    <TextView


        android:textColor="#08dde1"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fast Nuces"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available floors"
        android:textSize="25dp"
        android:textColor="#08dde1"

        android:id="@+id/available_floors"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="GroundFloor"
        android:id="@+id/button_ground"
        android:background="#6c9293"
        android:textColor="#ffffff"
        android:layout_below="@+id/available_floors"
        android:layout_alignLeft="@+id/floor3"
        android:layout_alignStart="@+id/floor3"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"       android:text="Floor 1"
        android:textColor="#ffffff"


        android:id="@+id/floor3"
        android:background="#6c9293"
        android:layout_below="@+id/button_ground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"       android:text="Demo Map"
        android:textColor="#ffffff"


        android:id="@+id/demomap"
        android:background="#6c9293"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/floor1"
        android:layout_alignStart="@+id/floor1" />

</RelativeLayout>
